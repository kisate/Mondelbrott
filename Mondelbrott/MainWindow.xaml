<Window x:Class="Mondelbrott.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*">
            </RowDefinition>
            <RowDefinition Height="32">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="Blue" Grid.Row="0" SizeChanged="image1_SizeChanged">
        <StackPanel HorizontalAlignment="Left" x:Name="imgCanvas" Margin="0" VerticalAlignment="Top" />
            </Border>
        <StatusBar Grid.Row="1">
            <Label Height="32" x:Name="lblCoordinates"/>
        </StatusBar>
    </Grid>
</Window>
